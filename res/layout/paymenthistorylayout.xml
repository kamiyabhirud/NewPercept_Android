<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.newpercept.PaymentHistoryActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvuserdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:text=" My Payment History "
            android:textColor="@color/DarkSeaGreen"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearpaymenthistory"
            android:layout_below="@id/tvuserdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/tvhistorydetails"
            android:layout_below="@id/linearpaymenthistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="30dp"
             android:paddingTop="6dip"
            android:text=" History Details :  "
            android:textColor="@color/Black"
            android:textSize="20sp" />

        <ListView
            android:id="@android:id/list"
            android:layout_below="@id/tvhistorydetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>

        <Button
            android:id="@+id/button_paynow"
            android:layout_below="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/roundcorner"
            android:text=" Pay Now " />

        <Button
            android:id="@+id/button_autopay"
            android:layout_below="@id/button_paynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@drawable/roundcorner"
            android:text=" Automatic Payments " />

        <!-- Footer aligned to bottom -->
        <!-- <include layout="@layout/footerlayout" /> -->
    </RelativeLayout>

</ScrollView>