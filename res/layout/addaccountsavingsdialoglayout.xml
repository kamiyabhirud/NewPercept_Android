<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/savlayoutfirstname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/savfirstname"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text=" Firstname on the acocunt " />

        <EditText
            android:id="@+id/saventerfirstname"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:maxLength="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/savlayoutlasttname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/savlastname"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text=" Lastname on the acocunt " />

        <EditText
            android:id="@+id/saventerLastname"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:maxLength="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/savlayoutacctnumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/savtvacctnumber"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text=" Account Number  " />

        <EditText
            android:id="@+id/savetacctnumber"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:maxLength="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/savlayoutroutingtnumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/savtvroutingnumber"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text=" Routing Number  " />

        <EditText
            android:id="@+id/savetroutingnumber"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:maxLength="10" />
    </LinearLayout>

</LinearLayout>